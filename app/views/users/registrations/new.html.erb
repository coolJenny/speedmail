<% provide(:title, "Sign up") %>
<div class="container login-signup" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-5 col-md-offset-4">
      <%= devise_error_messages! %>
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <strong>Sign up</strong>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>          
            <fieldset>
              <div class="row" style="margin-top: 30px;">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                      </span>                      
                      <%= f.text_field :name, autocomplete: "off", placeholder: "Type your name", class: 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                      </span>                      
                      <%= f.email_field :email, autocomplete: "email", placeholder: "Type new email", class: 'form-control' %>                      
                    </div>
                  </div>
                  <div class="form-group" style="margin-bottom: 10px;">
                    <div class="input-group">                      
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password, autocomplete: "off", placeholder: 'Type new password', class: 'form-control' %>
                    </div>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>                      
                      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm your password', class: 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>
          <div class="text-center">
            Already have an account? <%= render "users/shared/links" %>
          </div>          
        </div>
      </div>
    </div>
  </div>
</div>
